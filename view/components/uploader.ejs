<div class="uploader">
    <div id="data" class="nothing hide"><%= data %></div>
    <div id="uploaderContainer" class="container">
        <nav class="nav-bar">
            <ul id="fileLabel">File</ul>
            <ul id="textLabel">Text</ul>
            <div class="nav-visual"></div>
        </nav>
        <%- include uploader_file.ejs -%>
        <%- include uploader_text.ejs -%>
    </div>
    <div id="progressContainer" class="progress-container hide">
        <%- include uploader_progress.ejs -%>
    </div>
    <div id="resultContainer" class="result-container hide">
        <%- include uploader_result.ejs -%>
    </div>
    <div id="errorContainer" class="error-container hide">
        <%- include uploader_error.ejs -%>
    </div>
</div>